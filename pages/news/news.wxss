/* pages/news/news.wxss */
page{
  background-color: white
}
::-webkit-scrollbar{
width: 0;
height: 0;
color: transparent;
}
scroll-view{
  position: absolute;
  height: 100%;
  width: 100%;
  left: 0;
  top: 0;
}
.block{
  height: 500px;
  margin: 5%;
}
.line{
  background-color: #E2E2E2;
  height: 1px;
  width: 96%;
  margin-left: 2%;
  margin-right: 2%;
  margin-top: 4%;
  margin-bottom: 4%
}
.backtotop{
  position: absolute;
  opacity: 0.4;
  height: 7%;
  width: 8%;
  right: 4%;
  bottom: 3%;
}
.linetop{
  position: absolute;
  height: 3px;
  width: 100%;
  left: 0;
  top: 0;
  box-shadow: 0px 2px 2px 0px #E2E2E2 inset;
}
.linebottom{
  position: absolute;
  height: 3px;
  width: 100%;
  left: 0;
  bottom: 0;
  box-shadow: 0px -2px 2px 0px #E2E2E2 inset;
}